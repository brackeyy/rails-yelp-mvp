<h1>Feel free to create a review 🐷:</h1>
<br>

<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit class: 'btn btn-primary w-100' %>
      <% end %>
    </div>
  </div>
</div>
